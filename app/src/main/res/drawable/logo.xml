<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 大圆（白色左半圆和黑色右半圆） -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@android:color/white"/>
            <size
                android:width="400dp"/>  <!-- 大圆宽度 = 2 * R -->
            android:height="400dp"/> <!-- 大圆高度 = 2 * R -->
        </shape>
    </item>

    <!-- 黑色右半圆 -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@android:color/black"/>
            <size
                android:width="200dp"/>  <!-- 半圆宽度 = R -->
            android:height="400dp"/> <!-- 半圆高度 = 2 * R -->
            <padding
                android:left="200dp"/> <!-- 向右平移一个半径 -->
        </shape>
    </item>

</layer-list>
